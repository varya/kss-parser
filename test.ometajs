ometa kssDivider {

  lineBreak = seq('\n'),
  doubleLineBreak = lineBreak lineBreak,
  lineEnd = lineBreak | end,
  blockEnd = end | doubleLineBreak,

  referenceNumber = seq(' Styleguide 1.0'),

  inlineComment = seq('//') (~lineEnd ~referenceNumber char)*,

  kssLastString = seq('//') referenceNumber lineEnd,

  kssMarkup = ((inlineComment lineEnd)* kssLastString):k -> [#kss, k],

  codeLine = (~inlineComment ~lineEnd char)*,

  code = (codeLine lineEnd)*:c -> [#code, c.join('')],

  block = kssMarkup:k lineEnd* code:c -> [#block, k, c],

  any = (block)*

}
