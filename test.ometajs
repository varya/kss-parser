ometa kssDivider {

  lineBreak = seq('\n'),
  doubleLineBreak = lineBreak lineBreak,
  lineEnd = lineBreak | end,
  blockEnd = end | doubleLineBreak,

  inlineComment = seq('//') (~lineEnd char)*:x lineEnd -> x.join(''),

  kssMarkup = inlineComment*:k -> [#kss, k.join('')],

  block = kssMarkup:k lineEnd -> [#block, k],

  any = (block)*

}
